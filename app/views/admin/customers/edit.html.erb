<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class="col-md-8 offset-md-1 mx-auto">
   <br></br>
   <h1>会員情報編集</h1>
   <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <% @customer.errors.full_messages.each do |message| %>
     <%= message %>
    <% end %>
   <% end %>
   <%= form_with model: @customer, url:admin_customer_path, method: :patch, local:true do |customer| %>
   <table>
    <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
    <tr><th>氏名</th><td><%= customer.text_field :last_name %></td><td><%= customer.text_field :first_name %></td></tr>
    <tr><th>フリガナ</th><td><%= customer.text_field :last_name_kana %></td><td><%= customer.text_field :first_name_kana %></td></tr>
    <tr><th>郵便番号</th><td><%= customer.text_field :postal_code %></td></tr>
    <tr><th>住所</th><td><%= customer.text_field :address %></td></tr>
    <tr><th>電話番号</th><td><%= customer.text_field :telephone_code %></td></tr>
    <tr><th>メールアドレス</th><td><%= customer.text_field :email %></td></tr>
    <tr>
     <th>会員ステータス</th>
     <td>
      <%= customer.radio_button :is_active, true %><%= customer.label :is_active, '有効', value: true %>
      <%= customer.radio_button :is_active, false %><%= customer.label :is_active, '退会', value: false %>
     </td>
    </tr>
   </table>
   <%= customer.submit "変更を保存" , class: "fas fa-user-cog btn btn-success" %>
   <% end %>
  </div>
 </div>
</div>

