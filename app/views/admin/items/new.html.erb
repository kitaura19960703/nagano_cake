<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class="col-md-8 offset-md-1 mx-auto">
   <br></br>
   <h1>商品新規登録</h1>
   <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <% @item.errors.full_messages.each do |message| %>
     <%= message %>
    <% end %>
   <% end %>
   <%= form_with model: @item, url:admin_items_path , local:true do |item| %>
   <!--form_withはtableの外trのうちに入れる-->
   <table>
    <tr><th>商品画像</th><td><%= item.attachment_field :image %></td></tr>
    <tr><th>商品名</th><td><%= item.text_field :name, class: "form-control" %></td></tr>
    <tr><th>商品説明</th><td><%= item.text_area :introduction, class: "form-control" %></td></tr>
    <tr><th>ジャンル</th><td><%= item.collection_select :genre_id, Genre.all, :id, :name %></td></tr>
    <tr><th>税抜価格</th><td><%= item.number_field :price, class: "form-control" %></td><td>円</td></tr>
    <tr>
     <th>販売ステータス</th>
     <td>
       <%= item.radio_button :is_active, true %><%= item.label :is_active, '販売中', value: true %>
       <%= item.radio_button :is_active, false %><%= item.label :is_active, '販売停止中', value: false %>
     </td>
     <td><%= item.submit "新規登録" , class: "fas fa-user-cog btn btn-success"%></td>
    </tr>
   </table>
   <% end %>
  </div>
 </div>
</div>
