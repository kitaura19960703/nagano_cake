<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <br></br>
   <h1>商品一覧</h1>
   <%= link_to "商品新規登録" ,new_admin_item_path, class: "fas fa-user-cog btn btn-success" %>
   <table class="table table-hover">
    <thead>
     <tr bgcolor="silver">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
     </tr>
    </thead>
    <tbody>
     <% @items.each do |item| %>
     <tr>
      <td><%= item.id  %></td>
      <td>
       <%= link_to item.name, admin_item_path(item.id) %>
      </td>
      <td><%= item.price %>円</td>
      <td><%= item.genre.name  %></td>
      <td>
       <% if item.is_active %><p class="text-success">販売中</p>
       <% else %><p class="text-secondary">販売停止中</p>
       <% end %>
      </td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>