<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class="col-md-8 offset-md-1 mx-auto">
   <br></br>
   <h1>ジャンル編集</h1>
   <% if @genre.errors.any? %>
    <div class="alert alert-warning">
     <ul>
      <% @genre.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    </div>
   <% end %>
   <%= form_with model: @genre, url: admin_genre_path , local:true do |genre| %>
   <p>ジャンル名 <%= genre.text_field :name %> <%= genre.submit '変更を保存',class: 'btn btn-success' %></p>
   <% end %>
  </div>
 </div>
</div>