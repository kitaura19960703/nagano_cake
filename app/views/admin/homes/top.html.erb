<div class='container px-5 px-sm-0'>
 <div class='row'>

　<div class='col-md-8 offset-md-1'>
   <h1>管理者(注文履歴一覧)</h1>
   <table class="table table-hover">
　  <thead>
     <tr bgcolor="silver">
      <th>購入日時</th>
    　<th>購入者</th>
    　<th>注文個数</th>
    　<th>注文ステータス</th>
    　<!--<th colspan = "3"></th>-->
     </tr>
　　</thead>
　　<tbody>
　　 <% @orders.each do |order| %>
　　  <tr>
　　   <td><%= link_to order.created_at.strftime("%Y-%-m-%-d %-H:%M:%S"), admin_order_path(order.id), class: 'hoge' %></td>
　　   <%#= link_to admin_order_path(order.id), class: 'hoge' do %><%#= order.created_at.strftime("%Y-%-m-%-d %-H:%M:%S") %><%# end %>
　　   <td><%= order.customer.last_name + order.customer.first_name %></td>
　　   <td><%= order.order_details.sum(:amount) %></td>
　　   <!--sum(:合計)-->
　　   <td><%= order.status %></td>
　　  </tr>
　　 <% end %>
　　</tbody>
　 </table>
  </div>
 </div>
</div>


