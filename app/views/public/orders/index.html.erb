<div class='container'>
 <div class='row'>
  <div class="col-md-8 mx-auto">
   <br></br>
   <h1>注文履歴一覧</h1>
   <br></br>
   <table border='1'>
    <thead>
     <tr bgcolor="silver">
      <th>注文日</th>
      <th colspan="3">配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
     </tr>
    </thead>
    <tbody>
     <% if @orders.empty? %>
      <tr><td>　</td><td colspan="3"> </td><td> </td><td> </td><td> </td><td> </td></tr>
     <% else %>
     <% @orders.each do |order| %>
      <tr>
       <td><%= order.created_at.strftime("%Y-%-m-%-d") %></td>
       <td colspan="3"><%= order.address %></td>
       <td><% order.order_details.each do |order_detail| %><%= order_detail.item.name %><% end %></td>
       <td><%= order.total_payment %></td>
       <td><%= order.status %></td>
       <td><%= link_to "表示する" , public_order_path(order.id), class: "fas fa-user-cog btn btn-success" %></td>
      </tr>
     <% end %>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>