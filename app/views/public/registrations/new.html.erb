<div class='container'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <br></br>
    <h2>顧客の会員登録画面</h2>
    <%= form_with model: resource, url: customer_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>
     <table>
      <tr>
       <th>名前</th>
       <td>(姓)<%= f.text_field :last_name, autofocus: true, class: "form-control" %></td>
       <td>(名)<%= f.text_field :first_name, autofocus: true, class: "form-control" %></td>
      </tr>
      <br>
      <tr>
       <th>フリガナ</th>
       <td>(セイ)<%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %></td>
       <td>(メイ)<%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></td>
      </tr>
     </table>
     <br>
     <div>メールアドレス</div>
     <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
     <br>
     <div>郵便番号<br>(ハイフンなし)</div>
     <div><%= f.text_field :postal_code, autofocus: true, class: "form-control" %></div>
     <br>
     <div>住所</div>
     <div><%= f.text_field :address, autofocus: true, class: "form-control" %></div>
     <br>
     <div>電話番号<br>(ハイフンなし)</div>
     <div><%= f.text_field :telephone_code, autofocus: true, class: "form-control" %></div>
     <br>
     <div>パスワード</div>
     <div>
      <% if @minimum_password_length %><em>(<%= @minimum_password_length %> characters minimum)</em><% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
     </div>
     <br>
     <div>パスワード<br>(確認用)</div>
     <div><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></div>
    <%= f.submit "新規登録",class: "fas fa-user-cog btn btn-success" %>
   <% end %>
   <%= render "public/shared/links" %>
  </div>
 </div>
</div>